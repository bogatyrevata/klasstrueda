{% extends "admin/base.j2" %}
{% from "macros/form.j2" import btn, input_form_6, input_form_12 %}

{% block admin_content %}

  <h1 class="mb-4">Список всех категорий</h1>
  {% for category in categories %}
  <div class="container mb-3">
    <div class="row justify-content-start">
      <div class="category-item mb-4">
        <div class="mb-3">
          категория:
          <h4>
            <a href="{{ url_for('admin_courses.edit_category', category_id=category.id) }}">
              {{ category.name }} - {{ category.alias }}
            </a>
          </h4>
          <form action="{{ url_for('admin_courses.delete_category', category_id=category.id) }}" method="post" style="display:inline;">
            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
            <button type="submit" class="btn btn-secondary" onclick="return confirm('Вы уверены, что хотите удалить эту категорию?');">Удалить</button>
          </form>
        </div>
      </div>

      {% for course in category.courses %}
        <div class="card" style="width: 18rem;">
          <a href="{{ url_for('admin_courses.edit_course', course_id=course.id) }}">
            {% if course.image %}
              {{ picture(
                class_name='card-img-top',
                file_name='upload/' ~ course.image,
                alt='Изображение для курса %s' % course.name,
                width=200,
                height=200,
                bp_tablet=834,
                width_tablet=300,
                height_tablet=200,
                bp_desktop=1440,
                width_desktop=400,
                height_desktop=300
              ) }}
            {% endif %}
            <div class="card-body">
              <h5 class="card-title">{{ course.name }}</h5>
              <p class="card-text">{{ course.alias }}</p>
              <p class="card-text">{{ course.description }}</p>
              <form action="{{ url_for('admin_courses.delete_course', course_id=course.id) }}" method="post" style="display:inline;">
                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                <button type="submit" class="card-link" onclick="return confirm('Вы уверены, что хотите удалить этот курс?');">Удалить</button>
              </form>
            </div>
          </a>

          {% for module in course.modules %}
            <div class="module-item">
              <div class="mb-2">
                модуль:
                <a href="#"><small>({{ module.id }})</small> {{ module.name }} - {{ module.alias }}</a>
                <a class="btn btn-secondary" href="{{ url_for('admin_courses.edit_module', module_id=module.id) }}">Изменить</a>
                <form action="{{ url_for('admin_courses.delete_module', module_id=module.id) }}" method="post" style="display:inline;">
                  <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                  <button type="submit" class="btn btn-secondary" onclick="return confirm('Вы уверены, что хотите удалить этот модуль?');">Удалить</button>
                </form>
              </div>
              {% for lesson in module.lessons %}
                <div class="module-item">
                  <div class="mb-2" style="padding-left: 90px">
                    урок:
                    <a href="#"><small>({{ lesson.id }})</small> {{ lesson.name }} - {{ lesson.alias }}</a>
                    {# <a class="btn btn-secondary" href="{{ url_for('admin_courses.edit_lesson', lesson_id=lesson.id) }}">Изменить</a> #}
                    <form action="{{ url_for('admin_courses.delete_lesson', lesson_id=lesson.id) }}" method="post" style="display:inline;">
                      <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                      <button type="submit" class="btn btn-secondary" onclick="return confirm('Вы уверены, что хотите удалить этот урок?');">Удалить</button>
                    </form>
                  </div>
                </div>
              {% endfor %}
            </div>
          {% endfor %}
      </div>
      {% endfor %}
    </div>
  </div>
  {% endfor %}
  <a class="btn btn-primary" href="{{ url_for('admin_courses.add_category') }}">Добавить категорию</a>
  <a class="btn btn-primary" href="{{ url_for('admin_courses.add_course') }}">Добавить курс</a>
  <a class="btn btn-primary" href="{{ url_for('admin_courses.add_module') }}">Добавить модуль</a>
  <a class="btn btn-primary" href="{{ url_for('admin_courses.add_lesson') }}">Добавить урок</a>

{% endblock admin_content %}

