{% extends "base.j2" %}
{% from "macros/generate_page_header.j2" import generate_page_header %}
{% from "macros/form.j2" import btn, input_form_6, input_form_12 %}

{% block content %}
  <!-- Page Header Start -->
  {{ generate_page_header(active_item='courses') }}
  <!-- Page Header End -->

   <div class="container">
    <h1>{{ course.name }}</h1>
    <p>{{ course.description }}</p>
    <img src="{{ url_for('static', filename='upload/' ~ course.image) }}" alt="{{ course.name }}" width="300" height="300">
    {{ course.about }}
    {{ course.about_photo }}
    {{ course.information }}
    {{ course.features }}
    {{ course.skills }}
    {{ course.students_work }}
    {{ course.promo }}
   </div>
   <!-- Start Registration Form -->
    <div class="container-xxl py-6" id="consultation">
      <div class="container">
        <div class="row g-5">
          <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
            <h6 class="text-danger text-uppercase mb-2">Напишите нам</h6>
            <h1 class="display-6 mb-4">Записаться на курс или получить бесплатную консультацию по курсу</h1>
            <form action="{{ url_for('core.form_proc') }}" method="post">
              <div class="row g-3">
              <input type="hidden" name="csrf_token" value="{{ csrf_token() }}"/>
              {{ input_form_6(form.name) }}
              {{ input_form_6(form.email) }}
              {{ input_form_12(form.course_name) }}
              {{ input_form_12(form.message, style="height: 150px") }}
                <div class="col-12">
                  <button class="btn btn-danger py-3 px-5" type="submit">Отправить сообщение</button>
                </div>
              </div>
            </form>
            <div class="col-12 mt-3">
            <a href="">*Политика конфиденциальности</a>
            </div>
          </div>
          <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 450px;">
            <div class="position-relative overflow-hidden ps-5 pt-5 h-100" style="min-height: 400px;">
              <img class="position-absolute w-100 h-100" src="{{ url_for('static', filename='img/jewelry-6.jpg') }}"  alt="" style="object-fit: cover;">
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- End Registration Form -->
    <div class="container">
    {{ course.registration_photo }}
    {{ course.artist_photo }}
    {{ course.artist }}
    {{ course.artist_work }}
    {{ course.final_registration_form }}
   </div>

{% endblock content %}
