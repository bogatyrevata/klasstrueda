{% extends "base.j2" %}

{% from 'macros/form.j2' import base, btn, render_field_errors %}
{% set meta_title = 'Сброс пароля' %}
{% block content %}
<div class="container-xxl py-6">
  <div class="container">
    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
      <h3 class="display-6 mb-4">Сброс пароля</h3>
      <form class="form" action="{{ url_for_security('reset_password', token=reset_password_token) }}" method="post" name="reset_password_form">
        <div class="row g-3">
          {{ reset_password_form.hidden_tag() }}
          {{ render_field_errors(reset_password_form.csrf_token) }}
          <div class="col-12">
            <div class="form-floating">
              {{ base(reset_password_form.password) }}
            </div>
          </div>
          <div class="col-12">
            <div class="form-floating">
              {{ base(reset_password_form.password_confirm) }}
            </div>
          </div>
          <div class="col-12">
            {{ btn(reset_password_form.submit, value='Сбросить пароль') }}
          </div>
        </div>
      </form>
      <footer class="main__footer">
        <div class="col-12">
          <p class="main__text"><a href="{{ url_for_security('login') }}">Вход</a></p>
        </div>
      </footer>
  </div>
{% endblock content %}
