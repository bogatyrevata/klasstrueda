{% extends "base.j2" %}

{% from 'macros/form.j2' import base, btn, render_field_errors %}
{% set meta_title = 'Сброс пароля' %}
{% block content %}
<div class="container-xxl py-6">
  <div class="container">
    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
      <h3 class="display-6 mb-4">Отправить инструкции по сбросу пароля</h3>
      <form class="form" action="{{ url_for_security('forgot_password') }}" method="post" name="forgot_password_form">
        <div class="row g-3">
          {{ forgot_password_form.hidden_tag() }}
          {{ render_field_errors(forgot_password_form.csrf_token) }}
          <div class="col-12">
            <div class="form-floating">
              {{ base(forgot_password_form.email) }}
            </div>
          </div>
          <div class="col-12">
          {{ btn(forgot_password_form.submit, value='Отправить инструкции') }}
          </div>
        </div>
      </form>
      <footer class="main__footer">
        <div class="col-12">
          <p class="main__text"><a href="{{ url_for_security('login') }}">Вход</a></p>
        </div>
      </footer>
    </div>
  </div>
</div>
{% endblock content %}
