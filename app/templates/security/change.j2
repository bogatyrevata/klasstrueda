{% extends "base.j2" %}

{% from 'macros/form.j2' import base, btn, render_field_errors %}
{% set meta_title = 'Смена пароля' %}
{% block content %}
<div class="container-xxl py-6">
  <div class="container">
    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
      <h3 class="display-6 mb-4">Изменение пароля</h3>
      <form class="form" action="{{ url_for_security('change_password') }}" method="post" name="change_password_form">
        <div class="row g-3">
          {{ change_password_form.hidden_tag() }}
          {{ render_field_errors(change_password_form.csrf_token) }}
          <div class="col-12">
            <div class="form-floating">
              {{ base(change_password_form.password) }}
            </div>
          </div>
          <div class="col-12">
            <div class="form-floating">
              {{ base(change_password_form.new_password) }}
            </div>
          </div>
          <div class="col-12">
            <div class="form-floating">
              {{ base(change_password_form.new_password_confirm) }}
            </div>
          </div>
          <div class="col-12">
            {{ btn(change_password_form.submit, value='Сменить пароль') }}
          </div>
        </div>
      </form>
      <footer class="main__footer">
        <p class="main__text"><a href="{{ url_for_security('login') }}">Вход</a></p>
      </footer>
    </div>
  </div>
</div>
{% endblock content %}
