{% from "macros/make_menu.j2" import make_menu %}

<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
  <div class="spinner-grow text-primary" role="status"></div>
</div>
<!-- Spinner End -->

<!-- Topbar Start -->
<div class="container-fluid bg-dark text-light p-0">
  <div class="row gx-0 d-none d-lg-flex">
    <div class="col-lg-7 px-5 text-start">
      <div class="h-100 d-inline-flex align-items-center me-4">
        <small class="fa fa-map-marker-alt text-primary me-2"></small>
        <small>{{ g.contacts.address }}</small>
      </div>
      <div class="h-100 d-inline-flex align-items-center">
        <small class="far fa-clock text-primary me-2"></small>
        <small>Пн–Вс 9:00–21:00</small>
      </div>
    </div>
    <div class="col-lg-5 px-5 text-end">
      <div class="h-100 d-inline-flex align-items-center me-4">
        <a href="tel:{{ g.contacts.tel }}">
          <small class="fa fa-phone-alt text-primary me-2"></small>
          <small>{{ g.contacts.phone }}</small>
        </a>
      </div>
      <div class="h-100 d-inline-flex align-items-center mx-n2">
        {% for link in g.social_links %}
          <a class="{% if not loop.last %}btn btn-square btn-link rounded-0 border-0 border-end border-secondary{% else %}btn btn-square btn-link rounded-0{% endif %}" href="{{ link.href }}">
            <i class="fab fa-{{ link.title }} text-primary"></i>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<!-- Topbar End -->

<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0">
  <a class="navbar-brand d-flex align-items-center border-end px-4 px-lg-5" href="{{ url_for('core.index') }}">
    <h2 class="m-0">Klasstrueda</h2>
  </a>
  <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <div class="navbar-nav ms-auto p-4 p-lg-0">
      {{ make_menu(g.menu, page) }}
    </div>
      {% if not current_user.is_authenticated %}
      <a href="{{ url_for('security.login') }}" class="btn btn-primary py-4 px-lg-5 d-lg-block">Войти
      <i class="fa fa-arrow-right ms-3"></i></a>
      <a href="{{ url_for('security.register') }}" class="btn btn-primary py-4 px-lg-5 d-lg-block">Регистрация
      </a>
    {% else %}
      <a href="{{ url_for('user.index') }}" class="btn btn-primary py-4 px-lg-5 d-lg-block">Личный кабинет
      <i class="fa fa-arrow-right ms-3"></i></a>
      <a href="{{ url_for('security.logout') }}" class="btn btn-primary py-4 px-lg-5 d-lg-block">Выйти
      <i class="fa fa-arrow-right ms-3"></i></a>
    {% endif %}
  </div>
</nav>
<!-- Navbar End -->
