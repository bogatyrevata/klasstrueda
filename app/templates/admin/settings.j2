{% extends "admin/base.j2" %}
{% from "macros/admin_ breadcrumbs.j2" import admin_breadcrumbs %}

{% block admin_content %}

{{ admin_breadcrumbs() }}

  <h2>Настройки</h2>
  {% for setting in settings %}<p>{{ setting.title }}: {{ setting.setting }}</p>{% endfor %}
  <p>
    <small>Версия сайта: {{ version }}</small>
    <br>
    <small>Версия БД: {{ db_revision }}</small>
  </p>
  <h3>Расширения</h3>
  <ul>
    {% for ext in extensions %}<li>{{ ext.title }}: {{ ext.version }}</li>{% endfor %}
  </ul>
{% endblock admin_content %}
